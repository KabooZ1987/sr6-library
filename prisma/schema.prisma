model EdgeBoost {
  id          String      @id @unique @default(cuid())
  name        String
  cost        Int
  description String
  image       Image?      @relation(fields: [imageId], references: [id])
  imageId     Int?
  source      source_book
  page        Int
  updated_at  DateTime    @default(now()) @updatedAt
}

model EdgeAction {
  id          String                  @id @unique @default(cuid())
  name        String
  cost        Int
  restriction edge_action_restriction
  description String
  image       Image?                  @relation(fields: [imageId], references: [id])
  imageId     Int?
  source      source_book
  page        Int
  updated_at  DateTime                @default(now()) @updatedAt
}

model Rule {
  id          String        @id @unique @default(cuid())
  category    rule_category
  name        String
  description String
  updated_at  DateTime      @default(now()) @updatedAt
  homebrew    Boolean       @default(false)
  source      source_book?
  page        Int?
}

model Homebrew {
  id          String        @id @unique @default(cuid())
  category    rule_category
  name        String
  description String
  image       Image?        @relation(fields: [imageId], references: [id])
  imageId     Int?
  updated_at  DateTime      @default(now()) @updatedAt
}

model Action {
  id          String       @id @unique @default(cuid())
  name        String
  type        action_type
  homebrew    Boolean
  attribute   attribute?
  skill       skill?
  description String
  image       Image?       @relation(fields: [imageId], references: [id])
  imageId     Int?
  source      source_book?
  page        Int?
  updated_at  DateTime     @default(now()) @updatedAt
}

model Image {
  id         Int          @id @unique @default(autoincrement())
  image      Bytes
  hash       String
  Homebrew   Homebrew[]
  EdgeBoost  EdgeBoost[]
  EdgeAction EdgeAction[]
  Action     Action[]
}

enum attribute {
  body
  agility
  reflex
  strength
  willpower
  logic
  intuition
  charisma
  magic
  resonance
  edge
  essence
}

enum skill {
  astral
  athletics
  biotech
  close_combat
  con
  conjuring
  cracking
  electronics
  enchanting
  engineering
  firearms
  influence
  outdoors
  perception
  piloting
  sorcery
  stealth
  tasking
  exotic_weapons
  other
}

enum action_type {
  minor
  major
  free
  whole_round
}

enum source_book {
  core
  wyrd
  wild_life
  firing_squad
  companion
  body_shop
  shifter
  homebrew
}

enum edge_action_restriction {
  melee_attack
  ranged_attack
  any_attack
  any
  specific
  block
  ranged_attack_from_cover
  use_skill
  multi_attack
}

enum rule_category {
  edge
  magic
  combat
  decking
  rigging
  regeneration
  critter
  spirits
  other
}

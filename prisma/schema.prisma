generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
}

generator custom_generator {
    provider = "prisma-generator-fake-data"
    output   = "../types/fake-data.ts"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://webuser:Luebeck%231@localhost:5432/webdb?schema=public"
}

model EdgeBoost {
  id          String      @id @unique @default(cuid())
  name        String
  cost        Int
  description String
  source      source_book
  page        Int
  updated_at  DateTime    @default(now()) @updatedAt
}

model EdgeAction {
  id          String                  @id @unique @default(cuid())
  name        String
  cost        Int
  restriction edge_action_restriction
  description String
  source      source_book
  page        Int
  updated_at  DateTime                @default(now()) @updatedAt
}

model Rule {
  id          String        @id @unique @default(cuid())
  category    rule_category
  name        String
  description String
  updated_at  DateTime      @default(now()) @updatedAt
  homebrew    Boolean       @default(false)
  source      source_book?
  page        Int?
}

model Homebrew {
  id          String        @id @unique @default(cuid())
  category    rule_category
  name        String
  description String
  updated_at  DateTime      @default(now()) @updatedAt
}

enum source_book {
  core
  wyrd
  wild_life
  firing_squad
  companion
  body_shop
  shifter
  homebrew
}

enum edge_action_restriction {
  melee_attack
  ranged_attack
  any_attack
  any
  specific
  block
  ranged_attack_from_cover
  use_skill
  multi_attack
}

enum rule_category {
  edge
  magic
  combat
  decking
  rigging
  regeneration
  critter
  spirits
  other
}